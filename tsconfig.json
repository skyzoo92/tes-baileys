{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "sourceMap": false,
    "declarationMap": false,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,
    "esModuleInterop": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
